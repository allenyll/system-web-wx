/**goods.wxss**/
page {
  background-color: #f4f4f4;
}

.v-search {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  background: #fff;
  position: fixed;
  z-index: 10;
  border-bottom: 2rpx solid #d9d9d9;
}

.v-search .add {
  width: 10%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.v-search .search {
  width: 80%;
}

.search .van-search {
  height: 100rpx;
}

.v-search .condition {
  width: 10%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.v-tabs {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  background: #fff;
  padding-top: 10rpx;
  position: fixed;
  top: 102rpx;
  z-index: 10;
}

.tabs-ul {
  width: 33.33%;
  text-align: center;
}

.tabs-li-2 {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #b2b2b2;
}

.con-tabs {
  width: 750rpx;
  position: fixed;
  top: 202rpx;
  z-index: 10;
  border-top: 5rpx solid #eee;
}

.sort{
  position: fixed;
  top: 91rpx;
  background: #fff;
  width: 100%;
  height: 78rpx;
}

.sort-box{
  background: #fff;
  width: 100%;
  height: 78rpx;
  overflow: hidden;
  /* padding: 0 30rpx; */
  display: flex;
}

.sort-box .item{
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  flex:1;
  color: #333;
  font-size: 30rpx;
}

.sort-box .item .txt{
  display: block;
  width: 100%;
  height: 100%;
  color: #333;
}

.sort-box .item.active .txt{
  color: #b4282d;
}

.sort-box .item.by-price{
  background: url(data:image/png;base64,) 110rpx center no-repeat;
  background-size: 15rpx 21rpx;
}

.sort-box .item.by-price.active.asc{
  background: url(data:image/png;base64,) 110rpx center no-repeat;
  background-size: 15rpx 21rpx;
}

.sort-box .item.by-price.active.desc{
  background: url(data:image/png;base64,) 110rpx center no-repeat;
  background-size: 15rpx 21rpx;
}

.sort-box-category{
  background: #fff;
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 40rpx 40rpx 0 0;
  border-bottom: 1px solid #d9d9d9;
}

.sort-box-category .item{
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  float: left;
  padding: 0 16rpx;
  margin: 0 0 40rpx 40rpx;
  border: 1px solid #666;
  color: #333;
  font-size: 24rpx;
}

.sort-box-category .item.active{
  color: #b4282d;
  border: 1px solid #b4282d;
}

.scroll {
  position: relative;
  top: 280rpx;
}

.goods-item{
  height: auto;
  overflow: hidden;
  width: 100%;
}

.goods-list{
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
  padding-left: 30rpx;
  border-bottom: 1px solid #e1e1e1;
}

.goods-list .item{
  height: 160rpx;
  width: 720rpx;
  background: #fff;
  padding: 30rpx 30rpx 30rpx 0;
  border-bottom: 1px solid #e1e1e1;
}

.item:last-child{
  border-bottom: 1px solid #fff;
}

.item .img{
  float: left;
  width: 150rpx;
  height: 150rpx;
  border-radius: 16rpx;
}

.item .info{
  float: right;
  width: 540rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
}

.item .info .name{
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
}


.item .info .subtitle{
  margin-top: 8rpx;
  margin-right: 10rpx;
  font-size: 24rpx;
  color: #888;
  line-height: 40rpx;
}

.item .info .price{
  margin-top: 8rpx;
  font-size: 20rpx;
  /* color: red; */
  /* line-height: 40rpx; */
  display: flex;
}

.price .price-ul {
  width: 25%;
}

.price .price-ul .price-li-1{
  color: #FFA500;
}

.price .price-ul .price-li-2{
  color: #888;
}
