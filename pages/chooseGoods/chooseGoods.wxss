/**goods.wxss**/
page {
  background-color: #f4f4f4;
}

.v-search {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  background: #fff;
  position: fixed;
  z-index: 5;
  border-bottom: 2rpx solid #d9d9d9;
}

.v-search .add {
  width: 10%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.v-search .search {
  width: 80%;
}

.search .van-search {
  height: 100rpx;
}

.v-search .condition {
  width: 10%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.pop-container {
  width: 630rpx;
  background: #f4f4f4;
}

.v-cell {
  display: flex;
  background: #fff;
  /* height: 51px; */
  border-bottom: 2rpx solid #eee;
}

.v-name {
  width: 20%;
  height: 50px;
  line-height: 50px;
  text-align: left;
  font-size: 24rpx;
  margin-left: 34rpx;
  color: #999;
}

.v-content {
  width: 80%;
}

.v-content .van-dropdown-menu {
  box-shadow: none;
}

.v-reset {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.v-confirm {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background: #0387FE;
}

.con-tabs {
  width: 750rpx;
  position: fixed;
  top: 100rpx;
  z-index: 5;
  border-top: 5rpx solid #eee;
}

.sort{
  position: fixed;
  top: 91rpx;
  background: #fff;
  width: 100%;
  height: 78rpx;
}

.sort-box{
  background: #fff;
  width: 100%;
  height: 78rpx;
  overflow: hidden;
  /* padding: 0 30rpx; */
  display: flex;
}

.sort-box .item{
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  flex:1;
  color: #333;
  font-size: 30rpx;
}

.sort-box .item .txt{
  display: block;
  width: 100%;
  height: 100%;
  color: #333;
}

.sort-box .item.active .txt{
  color: #0387FE;
}

.sort-box .item.by-price{
  background: url(data:image/png;base64,) 110rpx center no-repeat;
  background-size: 15rpx 21rpx;
}

.sort-box .item.by-price.active.asc{
  background: url(data:image/png;base64,) 110rpx center no-repeat;
  background-size: 15rpx 21rpx;
}

.sort-box .item.by-price.active.desc{
  background: url(data:image/png;base64,) 110rpx center no-repeat;
  background-size: 15rpx 21rpx;
}

.sort-box-category{
  background: #fff;
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 16rpx 40rpx 0 0;
  border-bottom: 1px solid #d9d9d9;
}

.sort-box-category .item{
  height: 60rpx;
    width: 200rpx;
    line-height: 60rpx;
    text-align: center;
    float: left;
    /* padding: 0px 20rpx; */
    margin: 0px 0 10rpx 40rpx;
    color: #333;
    font-size: 20rpx;
    border-radius: 32rpx;
    background: #eee;
}

.sort-box-category .item.active{
  color: #0387FE;
  background: #BBFFFF;
  font-weight: 600;
  /* border: 1px solid #0387FE; */
}

.scroll {
  position: relative;
  top: 180rpx;
}

.goods-item{
  height: auto;
  overflow: hidden;
  width: 100%;
  border-bottom: 1px solid #e1e1e1;
}

.goods-list{
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.goods-list .item{
  display: flex;
  width: 960rpx;
  background: #fff;
  border-bottom: 1px solid #e1e1e1;
  padding-left: 30rpx;
  transition: margin-left 0.2s ease-in-out;
}

.item:last-child{
  border-bottom: 1px solid #fff;
}

.v-goods-info {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  width: 725rpx;
  box-sizing: border-box;
}

.item .img{
  float: left;
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
}

.v-num {
  position: absolute;
  bottom: 0;
  width: 180rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #FFA500;
  color: #fff;
  font-size: 22rpx;
  border-radius: 0 0 16rpx 16rpx;
}

.item .info{
  float: right;
  width: 560rpx;
  /* height: 160rpx; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
}

.item .info .name{
  font-size: 28rpx;
  color: #333;
  /* line-height: 40rpx; */
}


.item .info .subtitle{
  margin-top: 8rpx;
  margin-right: 10rpx;
  font-size: 24rpx;
  color: #888;
  line-height: 40rpx;
}

.item .info .price{
  margin-top: 14rpx;
  font-size: 20rpx;
  /* color: red; */
  /* line-height: 40rpx; */
  display: flex;
}

.price .price-ul {
  width: 50%;
}

.price .price-ul .price-li-1{
  color: #FFA500;
  font-size: 32rpx;
}

.price .price-ul .price-li-2{
  color: #888;
}

.add-cart {
  text-align: right;
  margin-right: 20rpx;
}

.v-edit {
  width: 120rpx;
  line-height: 220rpx;
  text-align: center;
  background: #FFA500;
  font-size: 24rpx;
  color: #fff;
}

.v-delete {
  width: 120rpx;
  line-height: 220rpx;
  text-align: center;
  background: #e64340;
  font-size: 24rpx;
  color: #fff;
}

show-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 4;
}

.popup-mask {
  position: fixed;
  top: 0;
