/**index.wxss**/
.index-header {
  font-size: 15px;
  height: 55px;
  position: fixed;
  top: 0;
  width: 750rpx;
  background: white;
  z-index: 50;
}

.header-input {
  width: 81%;
  margin-top: 15px;
  margin-left: 18px;
  float: left;
}

.input-box {
  border-radius: 20px;
  height: 32px;
  background-color: #f5f5f5;
  padding-left: 40px;
}

.icon-search {
  z-index: 2;
  position: absolute;
  left: 7%;
  color: #b2b2b2;
  font-weight: normal;
  padding: 5px;
  top: 16px;
}

.icon-search image {
  width: 20px;
  height: 20px;
}

.scan-icon {
  float: left;
  width: 13%;
  margin-top: 15px;
}

.scan-icon-img {
  width: 32px;
  height: 32px;
  margin-left: 8px;
}

/**轮播*/
.recommend {
  margin: 70px 0px 0px 0px;
}

.swiper-container {
  position: relative;
}

.swiper-container .swiper {
  height: 300rpx;
}

.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}

.swiper-container .dots {
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 10rpx;
  width: 28rpx;
  height: 28rpx;
  background: #fff;
  border-radius: 50%;
  transition: all 0.6s;
  font: 300 18rpx/28rpx "microsoft yahei";
  text-align: center;
}

.swiper-container .dots .dot.active {
  background: #f80;
  color: #fff;
}

/** 菜单展示 */

.index-content {
  margin-top: 10px;
  color: #b2b2b2;
}

.content-li {
  width: 33.1%;
  height: 100px;
  font-size: 15px;
  border-right: 0.1px solid #e6e6e6;
  border-bottom: 0.1px solid #e6e6e6;
  float: left;
}

.li-right {
  border-right: none;
}

.li-img {
  text-align: center;
  margin-top: 15px;
}

.li-img image {
  width: 32px;
  height: 32px;
}

.li-text {
  text-align: center;
  margin-top: 5px;
}
