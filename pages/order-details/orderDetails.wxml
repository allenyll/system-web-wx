  <view class="peisong-way" hidden="true">
    <view class="row-box">
      <view class="row-label">配送方式</view>
      <view class="right-text">顺丰快递</view>
    </view>
    <view class="row-box">
      <view class="row-label">留言</view>
      <view class="right-text">
        <input name="remark" type="text" class="liuyan" placeholder="如需留言请输入" />
      </view>
    </view>
  </view>
  <view class="order-info">
    <view class="row-box">
      <view class="row-label">订单编号</view>
      <view class="right-text">{{orderDetail.orderNo}}</view>
    </view>
    <view class="row-box">
      <view class="row-label">下单时间</view>
      <view class="right-text">{{orderDetail.orderTime}}</view>
    </view>
  </view>
  <view class="goods-info">
    <view class="row-box">
      <view class="row-label">商品金额</view>
      <view class="right-text">¥ {{orderDetail.orderAmount}}</view>
    </view>
    <view class="row-box">
      <view class="row-label">运费</view>
      <view class="right-text">+ ¥ {{orderDetail.logisticsFee}}</view>
    </view>
    <view class="row-box">
      <view class="row-label">应付总额</view>
      <view class="right-text" style='color: red'>¥ {{orderDetail.totalAmount}}</view>
    </view>
  </view>

  <view class="btn-bottom">
    <view class="btn btn-red" wx:if="{{orderDetail.orderStatus == 'SW0701'}}" bindtap="toPayTap" data-id="{{orderDetail.pkOrderId}}">去支付</view>
    <view class="btn btn-blue" wx:if="{{orderDetail.orderStatus == 'SW0701'}}" bindtap="cancelOrderTap" data-id="{{orderDetail.pkOrderId}}">取消订单</view>
    <view class="btn btn-red" wx:elif="{{orderDetail.orderStatus == 'SW0703'}}" bindtap="confirmBtnTap" data-id="{{orderDetail.pkOrderId}}">确认收货</view>
    <view class="btn btn-red" wx:elif="{{orderDetail.orderStatus == 'SW0704'}}" bindtap="appraiseOrderTap" data-id="{{orderDetail.pkOrderId}}">立即评价</view>
    <view class="btn btn-white" bindtap="deleteOrderTap" data-id="{{orderDetail.pkOrderId}}">删除订单</view>
  </view>

</view>